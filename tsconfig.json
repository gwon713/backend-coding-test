{
  "exclude": ["node_modules"],
  "include": ["src/**/*", "config", "controller", "models"],
  "compilerOptions": {           
    "target": "ES6",                               
    "module": "commonjs",                          
    "strict": true,                             
    "moduleResolution": "node",
    "outDir": "./build",
    "esModuleInterop": true,        
    "skipLibCheck": true,                          
    "forceConsistentCasingInFileNames": true     
  }
}